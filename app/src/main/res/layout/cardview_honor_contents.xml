<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/SimpleDraweeView_Honor_ProfileImage"
        android:layout_width="70dp"
        android:layout_margin="5dp"
        android:layout_height="70dp"
        android:background="@drawable/icon_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:roundAsCircle="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/TextView_CardView_Honor_ProfileName"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/TextView_CardView_Honor_ProfileName"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:text="Sen D"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="@id/SimpleDraweeView_Honor_ProfileImage"
        app:layout_constraintLeft_toRightOf="@id/SimpleDraweeView_Honor_ProfileImage"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/TextView_Cardview_title1"
        android:text="이번달 포스트 수"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/TextView_CardView_Honor_ProfileName"
        app:layout_constraintLeft_toLeftOf="@id/TextView_CardView_Honor_ProfileName"
        app:layout_constraintBottom_toTopOf="@id/TextView_CardView_Honor_PostCount"
        app:layout_constraintRight_toLeftOf="@id/TextView_Cardview_title2"/>

    <TextView
        android:id="@+id/TextView_CardView_Honor_PostCount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="15"
        app:layout_constraintTop_toBottomOf="@id/TextView_Cardview_title1"
        app:layout_constraintLeft_toLeftOf="@id/TextView_Cardview_title1"
        app:layout_constraintBottom_toBottomOf="@id/SimpleDraweeView_Honor_ProfileImage"
        app:layout_constraintRight_toRightOf="@id/TextView_Cardview_title1"/>

    <TextView
        android:id="@+id/TextView_Cardview_title2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="이번달 조회 수"
        app:layout_constraintLeft_toRightOf="@id/TextView_Cardview_title1"
        app:layout_constraintTop_toTopOf="@id/TextView_Cardview_title1"
        app:layout_constraintBottom_toBottomOf="@id/TextView_Cardview_title1"
        app:layout_constraintRight_toLeftOf="@id/TextView_Cardview_title3"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="13200"
        android:id="@+id/TextView_CardView_Honor_MonthViewCount"
        app:layout_constraintLeft_toLeftOf="@id/TextView_Cardview_title2"
        app:layout_constraintRight_toRightOf="@id/TextView_Cardview_title2"
        app:layout_constraintTop_toTopOf="@id/TextView_CardView_Honor_PostCount"
        app:layout_constraintBottom_toBottomOf="@id/TextView_CardView_Honor_PostCount"/>

    <TextView
        android:id="@+id/TextView_Cardview_title3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="이번달 추천 수"
        app:layout_constraintLeft_toRightOf="@id/TextView_Cardview_title2"
        app:layout_constraintTop_toTopOf="@id/TextView_Cardview_title1"
        app:layout_constraintBottom_toBottomOf="@id/TextView_Cardview_title1"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/TextView_CardView_Honor_MonthRecommendCount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="100"
        app:layout_constraintLeft_toLeftOf="@id/TextView_Cardview_title3"
        app:layout_constraintRight_toRightOf="@id/TextView_Cardview_title3"
        app:layout_constraintBottom_toBottomOf="@id/TextView_CardView_Honor_PostCount"
        app:layout_constraintTop_toTopOf="@id/TextView_CardView_Honor_PostCount"/>

</androidx.constraintlayout.widget.ConstraintLayout>